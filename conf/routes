
# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

POST        /timers/save                               controllers.TimerEditorController.save()
GET         /timers                                    controllers.TimerEditorController.index()
POST        /courtesytones/save                        controllers.CourtesyToneEditorController.save()
GET         /courtesytones                             controllers.CourtesyToneEditorController.index()
POST        /meter/save                                controllers.MeterEditorController.save()
GET         /meter                                     controllers.MeterEditorController.index()
POST        /logic/save                                controllers.LogicAlarmEditorController.save()
GET         /logic                                     controllers.LogicAlarmEditorController.index()
POST        /common/save                               controllers.CommonEditorController.save()
GET         /common                                    controllers.CommonEditorController.index()
GET         /schedules                                 controllers.ScheduleController.index()
GET         /macros                                    controllers.MacroNodeController.index()
GET         /macro/edit/:key                           controllers.MacroNodeController.edit(key:MacroKey)
POST        /macro/save                                controllers.MacroNodeController.save()
GET         /messages                                  controllers.MessageController.index()
GET         /message/edit/:key                         controllers.MessageController.edit(key:MessageKey)
POST        /message/save                              controllers.MessageController.save()
GET         /datastore/download                        controllers.DataStoreController.downloadJson()
GET         /datastore/upload                          controllers.DataStoreController.upload
POST        /datastore/save                            controllers.DataStoreController.save()
GET         /rc210/download/:descriptor                controllers.IOController.download(descriptor:String)
POST        /rc210/progress                            controllers.IOController.progress()
GET         /rc210/progress                            controllers.IOController.progress()
GET         /rc210/result                              controllers.IOController.downloadResult
GET         /rc210                                     controllers.IOController.listSerialPorts()
GET         /flow                                      controllers.Flow2Controller.flow()
POST        /ports/save                                controllers.PortsEditorController.save()
GET         /ports                                     controllers.PortsEditorController.index()
GET         /tabs                                      controllers.LandingController.tabs()
POST        /schedule/save                             controllers.ScheduleController.save()
GET         /candidates                                controllers.CandidateController.index()
GET         /datastore/dump                            controllers.CandidateController.dump()
GET         /candidates/sendValue/:fieldKey            controllers.CandidateController.sendFieldValue(fieldKey:FieldKey)
GET         /candidates/send/candidate:fieldKey        controllers.CandidateController.sendCandidate(fieldKey:FieldKey)
GET         /candidates/sendAllFields                  controllers.CandidateController.sendAllFields()
GET         /candidates/sendAllCandidates              controllers.CandidateController.sendAllCandidates()
GET         /candidates/lastUpload                     controllers.CandidateController.lastSendAll()
GET         /candidates/ws                             controllers.CandidateController.ws
GET         /memory                                    controllers.MemoryController.index
POST         /clock/save                                controllers.ClockController.save()
GET         /clock/set                                 controllers.ClockController.setClock()
GET         /clock                                     controllers.ClockController.index
GET         /                                          controllers.LandingController.tabs()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                              controllers.Assets.versioned(path="/public", file: Asset)
